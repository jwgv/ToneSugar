# infra/.env - copy from this file, then edit
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=123456789012            # <-- REPLACE with actual account ID
PROJECT_NAME=tunesugar
S3_BUCKET=tunesugar-samples-12345      # <-- must be globally unique, change suffix
ECR_REPO_APP=tunesugar-app
ECR_REPO_ANALYZER=tunesugar-analyzer
LAMBDA_NAME=tunesugar-analyzer-lambda
ECS_CLUSTER=tunesugar-cluster
ECS_TASK_FAMILY=tunesugar-task
DDB_TABLE_NAME=tunesugar-metadata

# Optional overrides for analyzer Lambda compute
# Increase if files are longer/heavier; defaults applied in deploy script
LAMBDA_TIMEOUT=60        # seconds
LAMBDA_MEMORY=1024       # MB

# Analyzer behavior toggles (performance)
# Enable/disable tempo estimation and bound its work for speed
ENABLE_TEMPO=true
TEMPO_MAX_SECONDS=30
TEMPO_SR=22050
